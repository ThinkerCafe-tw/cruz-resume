        let currentLang = 'zh';
        
        // Language switching
        function changeLanguage(lang) {
            currentLang = lang;
            const t = translations[lang];
            
            // Set text direction
            document.body.setAttribute('dir', t.dir);
            
            // Update language selector
            const langFlags = {
                zh: '🇹🇼 中文',
                en: '🇺🇸 English',
                ja: '🇯🇵 日本語',
                ko: '🇰🇷 한국어',
                ar: '🇸🇦 العربية'
            };
            document.getElementById('currentLang').textContent = langFlags[lang];
            
            // Update active state
            document.querySelectorAll('.lang-menu button').forEach(btn => {
                btn.classList.remove('active');
                if (btn.getAttribute('data-lang') === lang) {
                    btn.classList.add('active');
                }
            });
            
            // Update content
            updateContent(t);
            
            // Close menu
            document.getElementById('langMenu').classList.remove('show');
            document.querySelector('.lang-toggle').classList.remove('open');
        }
        
        function updateContent(t) {
            // Hero
            document.querySelector('.hero h1').textContent = t.hero.name;
            document.querySelector('.hero .tagline').textContent = t.hero.tagline;
            document.querySelector('.hero .subtitle').textContent = t.hero.subtitle;
            
            const statLabels = document.querySelectorAll('.stat-label');
            t.hero.stats.forEach((stat, i) => {
                if (statLabels[i]) statLabels[i].textContent = stat;
            });
            
            // About
            document.querySelector('#about .section-title').textContent = t.about.title;
            document.querySelector('#about p').innerHTML = t.about.content;
            
            // Experience
            document.querySelector('#experience .section-title').textContent = t.experience.title;
            const timelineItems = document.querySelectorAll('.timeline-item');
            t.experience.jobs.forEach((job, i) => {
                if (timelineItems[i]) {
                    timelineItems[i].querySelector('.timeline-title').textContent = job.title;
                    timelineItems[i].querySelector('.timeline-company').textContent = job.company;
                    timelineItems[i].querySelector('.timeline-date').textContent = job.date;
                    const ul = timelineItems[i].querySelector('ul');
                    ul.innerHTML = job.points.map(p => `<li>${p}</li>`).join('');
                }
            });
            
            // Expertise
            document.querySelector('#expertise .section-title').textContent = t.expertise.title;
            const skillCards = document.querySelectorAll('.skill-card');
            t.expertise.skills.forEach((skill, i) => {
                if (skillCards[i]) {
                    skillCards[i].querySelector('h3').textContent = skill.icon + ' ' + skill.title;
                    skillCards[i].querySelector('p').textContent = skill.desc;
                }
            });
            
            // Projects
            document.querySelector('#projects .section-title').textContent = t.projects.title;
            const projectCards = document.querySelectorAll('.project-card');
            t.projects.items.forEach((project, i) => {
                if (projectCards[i]) {
                    projectCards[i].querySelector('h3').textContent = project.title;
                    const tags = projectCards[i].querySelectorAll('.project-tag');
                    project.tags.forEach((tag, j) => {
                        if (tags[j]) tags[j].textContent = tag;
                    });
                    const ul = projectCards[i].querySelector('ul');
                    ul.innerHTML = project.points.map(p => `<li>${p}</li>`).join('');
                }
            });
            
            // CTA
            document.querySelector('.cta h2').textContent = t.cta.title;
            const ctaPs = document.querySelectorAll('.cta p');
            ctaPs[0].innerHTML = t.cta.subtitle + '<br>' + t.cta.location;
            
            const ctaButtons = document.querySelectorAll('.cta-button');
            ctaButtons[0].innerHTML = '📧 ' + t.cta.buttons[0];
            ctaButtons[1].innerHTML = '🌐 ' + t.cta.buttons[1];
            ctaButtons[2].innerHTML = '💼 ' + t.cta.buttons[2];
            
            // Footer
            const footerPs = document.querySelectorAll('footer p');
            footerPs[0].textContent = t.footer.built;
            footerPs[1].textContent = '"' + t.footer.quote + '"';
        }
        
        function toggleLangMenu() {
            const menu = document.getElementById('langMenu');
            const toggle = document.querySelector('.lang-toggle');
            menu.classList.toggle('show');
            toggle.classList.toggle('open');
        }
        
        // Close language menu when clicking outside
        document.addEventListener('click', (e) => {
            if (!e.target.closest('.language-selector')) {
                document.getElementById('langMenu').classList.remove('show');
                document.querySelector('.lang-toggle').classList.remove('open');
            }
        });
        
        // Theme Toggle
        function toggleTheme() {
            const body = document.body;
            const themeIcon = document.getElementById('themeIcon');
            const currentTheme = body.getAttribute('data-theme');
            
            if (currentTheme === 'dark') {
                body.setAttribute('data-theme', 'light');
                themeIcon.textContent = '🌙 Dark Mode';
            } else {
                body.setAttribute('data-theme', 'dark');
                themeIcon.textContent = '☀️ Light Mode';
            }
        }
        
        // Scroll Progress Bar
        window.addEventListener('scroll', () => {
            const winScroll = document.body.scrollTop || document.documentElement.scrollTop;
            const height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
            const scrolled = (winScroll / height) * 100;
            document.getElementById('progressBar').style.width = scrolled + '%';
        });
        
        // Intersection Observer for fade-in animations
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -100px 0px'
        };
        
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');
                }
            });
        }, observerOptions);
        
        document.querySelectorAll('section').forEach(section => {
            observer.observe(section);
        });
        
        // Smooth scroll for navigation
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
        
        // Initialize with default language
        changeLanguage('zh');
    </script>
